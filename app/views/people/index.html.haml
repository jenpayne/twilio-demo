%h3 People
%table
  - @people.each do |person|
    %tr
      %td
        = person.first_name
      %td
        = person.last_name
      %td
        = person.phone_number
      %td
        = link_to 'Remove Person', person_path(person), :method => 'delete'

= link_to 'Add New Person', new_person_path, :method => :get

= link_to 'Call for Snow Day', communication_snow_day_call_path